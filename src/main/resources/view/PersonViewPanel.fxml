<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="name" text="\$first" styleClass="cell_big_label" />
            </HBox>
            <FlowPane fx:id="tags" />
            <Label fx:id="phone" styleClass="cell_small_label"/>
            <Label fx:id="email" styleClass="cell_small_label"/>
            <Label fx:id="company" styleClass="cell_small_label"/>
            <Label fx:id="job" styleClass="cell_small_label"/>
            <Label fx:id="lastModifiedDateTime" styleClass="cell_small_label"
                   style="-fx-font-style : italic "/>
            <Label fx:id="schedule" styleClass="cell_schedule_label"/>
            <Label fx:id="noteHeader" styleClass="cell_heading_label" text="Notes:" />
            <Label fx:id="note" styleClass="cell_note" wrapText="true"/>
        </VBox>
    </GridPane>
    <VBox>
        <Label fx:id="markStatus" styleClass="cell_icon_label"/>
    </VBox>
</HBox>
